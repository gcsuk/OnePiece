@page "/"

<PageTitle>OnePiece Card Library</PageTitle>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="text-center py-5">
                <!-- Main OnePiece Cover Image -->
                <div class="mb-5">
                    <img src="https://stonepiece.blob.core.windows.net/general/OnePieceCover.png" 
                         alt="OnePiece Card Library" 
                         class="img-fluid rounded shadow-lg home-cover-image" />
                </div>

                <!-- Welcome Message -->
                <div class="mb-5">
                    <h1 class="display-4 fw-bold text-primary mb-3">üè¥‚Äç‚ò†Ô∏è OnePiece Card Library</h1>
                    <p class="lead text-muted">Welcome to your digital OnePiece card collection! Manage, view, and play with your cards.</p>
                </div>

                <!-- Navigation Buttons -->
                <div class="row g-4 justify-content-center">
                    <div class="col-12 col-sm-6 col-md-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <i class="bi bi-collection display-4 text-primary"></i>
                                </div>
                                <h5 class="card-title">View Cards</h5>
                                <p class="card-text text-muted">Browse your complete card collection with search and filter options.</p>
                                <a href="/cards" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-collection me-2"></i>Card List
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <i class="bi bi-plus-square display-4 text-success"></i>
                                </div>
                                <h5 class="card-title">Add Card</h5>
                                <p class="card-text text-muted">Upload and process new OnePiece cards to your collection.</p>
                                <a href="/addcard" class="btn btn-success btn-lg w-100">
                                    <i class="bi bi-plus-square me-2"></i>Add New Card
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <i class="bi bi-controller display-4 text-warning"></i>
                                </div>
                                <h5 class="card-title">Play Game</h5>
                                <p class="card-text text-muted">Play with your cards in an interactive game mode.</p>
                                <a href="/play" class="btn btn-warning btn-lg w-100">
                                    <i class="bi bi-controller me-2"></i>Play
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Info Section -->
                <div class="mt-5 pt-5 border-top">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-search display-6 text-info mb-3"></i>
                                <h6>Smart Search</h6>
                                <p class="text-muted small">Find cards quickly with advanced search and filtering options.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-cloud-upload display-6 text-primary mb-3"></i>
                                <h6>Easy Upload</h6>
                                <p class="text-muted small">Upload card images and let AI automatically extract card information.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-grid display-6 text-success mb-3"></i>
                                <h6>Organized View</h6>
                                <p class="text-muted small">View your cards in grid or list format with detailed information.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
